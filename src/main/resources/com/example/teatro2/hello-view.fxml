<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="656.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teatro2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <!-- Área para mostrar las bolitas -->
    <Pane fx:id="bolitasContenedor" prefHeight="200" prefWidth="200" style="-fx-border-color: black; -fx-border-width: 2;">
        <!-- Aquí se añadirán las bolitas -->
    </Pane>
    <!-- Botones existentes, movidos más abajo -->
    <Button fx:id="botonReserva" onAction="#onReservaButtonClick" text="Reservar 1 Boleto Cliente " />
    <Button fx:id="tuBotonParaDemo" onAction="#onHelloButtonClick" text="Reservar toda la sala  (Acomodador) )" />
    <Button fx:id="botonCancelarReserva" onAction="#onCancelarReservaButtonClick" text="Cancelar Reserva" />
</VBox>
