<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Rectangle?>
<VBox alignment="CENTER" prefHeight="600.0" prefWidth="656.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teatro2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <!-- Área para mostrar las bolitas -->
    <HBox spacing="10" >
        <Pane fx:id="bolitasContenedor" prefHeight="200" prefWidth="200" style="-fx-border-color: black; -fx-border-width: 2;">
            <!-- Aquí se añadirán las bolitas -->
        </Pane>
        <Pane fx:id="miPanel" prefWidth="200" prefHeight="200">
            <Rectangle width="200" height="200" layoutX="60" fill="BLACK"/>
        </Pane>
    </HBox>
    <!-- Botones existentes, movidos más abajo -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="helloButton" text="Reservar todo" onAction="#onHelloButtonClick"/>
        <Button fx:id="reservaButton" text="Reserva" onAction="#onReservaButtonClick"/>
        <Button fx:id="cancelarReservaButton" text="Cancelar Reserva" onAction="#onCancelarReservaButtonClick"/>
    </HBox>
    <ImageView fx:id="imagen1" fitWidth="100" fitHeight="100"/>
    <ImageView fx:id="imagen2" fitWidth="100" fitHeight="100"/>
</VBox>
